{
    Name = "StepTalk";
    
    Modules = (StepTalk);
    
    Classes = 
    {
        STBlock = 
        {
            Super = NSObject;
            AllowMethods =
            (
                "value",
                "valueWith:",
                "valueWith:with:",
                "valueWith:with:with:",
                "valueWith:with:with:with:",
                "argumentCount",
                "handler:",
                "whileTrue:",
                "whileFalse:"
            );
        };
        STScriptObject =
        {
            Super = NSObject;
            Restriction = AllowAll;
        };
        STUndefinedObject =
        {
            Super = nil;
            Restriction = AllowAll;
        };
    }
}
